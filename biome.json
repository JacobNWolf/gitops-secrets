{
   "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
   "vcs": {
      "enabled": true,
      "clientKind": "git",
      "useIgnoreFile": false
   },
   "files": {
      "ignoreUnknown": false,
      "ignore": ["node_modules", "dist"]
   },
   "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "lineWidth": 120,
      "indentWidth": 3
   },
   "organizeImports": {
      "enabled": true
   },
   "linter": {
      "enabled": true,
      "rules": {
         "recommended": true
      }
   },
   "javascript": {
      "formatter": {
         "quoteStyle": "single",
         "trailingCommas": "all",
         "indentWidth": 3,
         "indentStyle": "space",
         "lineWidth": 120,
         "arrowParentheses": "always",
         "semicolons": "always",
         "enabled": true
      },
      "linter": {
         "enabled": true
      }
   }
}
